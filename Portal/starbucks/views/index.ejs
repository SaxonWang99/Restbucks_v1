        <div class="jumbotron col-md-12">
            <div class="col-md-offset-3 col-md-6">
          <p class="text-center">CREATE ORDER</p>
          <div class="form-group">
            <label for="usr">Item Name:</label>
            <select class="form-control"  ng-model="order.name">
              <option value="Latte Macchiato">Latte Macchiato</option>
              <option value="Cappuccino">Cappuccino</option>
              <option value="Latte">Latte</option>
              <option value="Mocha">Mocha</option>
            </select>
          </div>

          <div class="form-group">
            <label for="usr">Milk:</label>
            <select class="form-control"  ng-model="order.milk">
              <option value="2% milk">2% milk</option>
              <option value="Whole milk">Whole milk</option>
              <option value="Non-fat milk">Non-fat milk</option>
              <option value="Almond">Almond</option>
              <option value="Coconut">Coconut</option>
            </select>
          </div>

          <div class="form-group">
            <label for="usr">Size:</label>
            <select class="form-control" ng-model="order.size">
              <option value="Short 8oz">Short 8oz</option>
              <option value="Tall 12oz">Tall 12oz</option>
              <option value="Grande 16oz">Grande 16oz</option>
              <option value="Venti 20oz">Venti 20oz</option>
            </select>
          </div>
          <button  class="btn btn-warning" ng-click="addorder()">Add Item</button>

          <table class="table">
            <thead>
            <tr>
              <th>No.</th>
              <th>Item Name</th>
              <th>Milk</th>
              <th>Size</th>
            </tr>
            </thead>
            <tbody>

            <tr  ng-repeat="x in orders">
              <td>{{x.qty}}</td>
              <td>{{ x.name }}</td>
              <td>{{ x.milk }}</td>
              <td>{{ x.size }}</td>
            </tr>

            </tbody>
          </table>

          <br/>
          <br>
          <div class="text-center">
            <button class="btn btn-success" ng-click="placeorder()" style="width: 70%">Place Order</button>
          </div>


            </div>
