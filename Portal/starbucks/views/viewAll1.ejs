<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>

    <script src="/javascripts/angular.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href='/bootstrap/css/bootstrap.css'/>

    <style>

        body  {
            background-color: black;
        }
        .one .jumbotron
        {
            min-height: 450px;
            min-width:45%;
            border-radius:0;
        }
    </style>

    <script src="/angularjs/restapp.js"></script>
</head>
<body ng-app="restbucks" ng-controller="sessioncheck1">

<!--Nav bar-->
<nav class="navbar navbar-inverse navbar-fixed-top" style="height: 50px" >
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">STARBUCKS</a>
        </div>
        <ul class="nav navbar-nav" >
            <li class="active"><a href="#">Home</a></li>


            <!--<li class="dropdown">-->
            <!--<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">City <span class="caret"></span></a>-->
            <!--<ul class="dropdown-menu">-->
            <!--<li><a href="/sanjose">San Jose</a></li>-->
            <!--<li><a href="/sf">San Francisco</a></li>-->
            <!--<li><a href="/la">Los Angles</a></li>-->

            <!--</ul>-->
            <!--</li>-->

        </ul>

    </div>
</nav>


<!--Nav bar ends-->

<!--Corousal strt-->
<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="height: 450px;max-height: 450px;width: 100%;max-width: 100%">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="/images/1.jpg" alt="Los Angeles" style="width: 100%;height: 450px;">
                </div>

                <div class="item">
                    <img src="/images/2.jpg" alt="Chicago" style="width: 100%;height: 450px;">
                </div>

                <div class="item">
                    <img src="/images/1.jpg" alt="New York" style="width: 100%;height: 450px;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<!--Corousal end-->
<div class="container-fluid" style="padding-top: 20px">

    <div class="jumbotron col-md-12">
        <!--create panel-->
        <div class="row">
            <div class="col-md-offset-2 col-md-8" ng-repeat="x in orderlist">
                <div class="panel panel-default" style="border-color: black">
                    <div class="panel-heading"><p ng-model="orderid"><b>ORDER : {{x._id}}</b></p></div>
                    <div class="panel-body">
                        <div class="row">
                            <!--<div class="col-md-6" style="text-align: center">{{x._id}}</div>-->

                            <div style="text-align: center" ng-repeat="y in x.items">
                                <div class="col-md-3">{{y.qty}}</div>
                                <div class="col-md-3">{{y.name}}</div>
                                <div class="col-md-3">{{y.milk}}</div>
                                <div class="col-md-3">{{y.size}}</div>
                            </div>
                            <!--<div class="col-md-3" style="text-align: center">{{x.prod_name}}</div>
                            <div class="col-md-3" style="text-align: center">{{x.prod_cost}}</div>
                            <div  class="col-md-3" style="text-align: center"><a href="/getItem?prod={{x.prod_name}}"> More details..</a></div>-->

                        </div></div>
                </div>
                <div class="col-md-offset-9" style="padding-bottom: 10px">
                    <button type="button" class="btn btn-warning" style="margin-top:-10px" ng-click="deletefn(x._id)">DELETE</button>
                    <button type="button" class="btn btn-success" style="margin-top:-10px" ng-click="updatefn(x._id)">UPDATE</button>

                </div>
            </div>
        </div>
    </div></div>
</body>
</html>