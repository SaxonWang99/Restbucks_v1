<!--Corousal strt-->
<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="height: 450px;max-height: 450px;width: auto">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="/images/1.jpg" alt="Los Angeles" style="width: 100%;height: 450px;">
                </div>

                <div class="item">
                    <img src="/images/2.jpg" alt="Chicago" style="width: 100%;height: 450px;">
                </div>

                <div class="item">
                    <img src="/images/1.jpg" alt="New York" style="width: 100%;height: 450px;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<!--Corousal end-->
<div class="col-md-8 panel" ng-repeat="x in orderlist">
    <div class="panel panel-primary">
        <div class="panel-heading"><p><b>ORDER : </b></p><p ng-model="orderid"><b>{{x._id}}</b></p></div>
        <div class="panel-body">
            <div class="row">
                <!--<div class="col-md-6" style="text-align: center">{{x._id}}</div>-->

                <div style="text-align: center" ng-repeat="y in x.items">
                    <div class="col-md-4">{{y.name}}</div>
                    <div class="col-md-4">{{y.milk}}</div>
                    <div class="col-md-4">{{y.size}}</div>
                </div>
                <!--<div class="col-md-3" style="text-align: center">{{x.prod_name}}</div>
                <div class="col-md-3" style="text-align: center">{{x.prod_cost}}</div>
                <div  class="col-md-3" style="text-align: center"><a href="/getItem?prod={{x.prod_name}}"> More details..</a></div>-->

            </div></div>
    </div>
    <div class="col-md-offset-9">
        <button type="button" class="btn btn-primary" style="margin-top:-10px" ng-click="deletefn(x._id)">DELETE</button>
        <button type="button" class="btn btn-primary" style="margin-top:-10px" ng-click="updatefn(x._id)">UPDATE</button>
    </div>
</div>

